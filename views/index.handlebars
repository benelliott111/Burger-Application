<h1>Burgers</h1>
<img src="assets/img/burger.png" alt="" style="max-height: 200px;">
<h2>Burgers ready to eat</h2>

<ul id="not-devoured">
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=0}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul id="devoured">
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=1}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="new-burger" name="name">
  </div>

  <div class="form-group">
  <button onClick="addBurger(event)">Add Burger</button>
</form>